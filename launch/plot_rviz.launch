<launch>
  <!-- PLAY BAGFILE -->
  <arg name="bagfileName" default="/home/eric/bagfiles/2016_06_14_sant_feliu/2016-06-14-11-50-47_1.bag" />
  <arg name="bagfileHz" default="1" />
  <param name="use_sim_time" value="true"/>
  <node name="rosbag" pkg="rosbag" type="play" args="--clock -r $(arg bagfileHz) $(arg bagfileName)"/>

  <!-- PLOT TRAJECTORIES -->
  <node pkg="usbl_position" name="plot_path_usbl" type="plot_path" output="screen"/>

  <!-- RVIZ -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find usbl_position)/config/plotting.rviz"/> 

</launch>
